@model ServerDataModel.SearchTracking

@{
    ViewBag.Title = @Resources.Resource.PublicTrackingIndexTrackTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SearchTracking</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TrackingNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TrackingNumber)
            @Html.ValidationMessageFor(model => model.TrackingNumber)
        </div>
       @if (ViewBag.PasswordRequired != null && ViewBag.PasswordRequired)
       {
           <div class="editor-label">
               @Html.LabelFor(model => model.Password)
           </div>
           <div class="editor-field">
               @Html.EditorFor(model => model.Password)
               @Html.ValidationMessageFor(model => model.Password)
           </div>
       }
        <p>
            <input type="submit" value = @Resources.Resource.PublicTrackingIndexTrackButton />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Resources.Resource.PublicTrackingIndexNavigateBack, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
